<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="400.0" styleClass="notification-form" stylesheets="@designDashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NotificationController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="My Books &amp; Reviews" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <ListView fx:id="notificationList" layoutX="14.0" layoutY="50.0" prefHeight="436.0" prefWidth="372.0" styleClass="notification-list" />
      <Button fx:id="close_btn" layoutX="360.0" layoutY="14.0" mnemonicParsing="false" onAction="#closeNotifications" styleClass="close-btn">
         <graphic>
            <FontAwesomeIcon glyphName="TIMES" size="1.5em" />
         </graphic>
      </Button>
      
      <!-- Rating Dialog -->
      <AnchorPane fx:id="ratingDialog" styleClass="rating-dialog" visible="false" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="50.0">
         <children>
            <VBox spacing="10" styleClass="rating-content">
               <children>
                  <Label styleClass="rating-title" text="Rate your experience">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="bookTitle_label" styleClass="book-title" />
                  <HBox fx:id="starsContainer" alignment="CENTER" spacing="5" />
                  <TextArea fx:id="comment_area" prefHeight="100.0" prefWidth="332.0" promptText="Write your comment here..." styleClass="comment-area" wrapText="true" />
                  <HBox alignment="CENTER_RIGHT" spacing="10">
                     <children>
                        <Button fx:id="cancel_rating_btn" onAction="#cancelRating" styleClass="cancel-btn" text="Cancel" />
                        <Button fx:id="submit_rating_btn" onAction="#submitRating" styleClass="submit-btn" text="Submit" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>

      <!-- Comment Dialog -->
      <AnchorPane fx:id="commentDialog" styleClass="rating-dialog" visible="false" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="50.0">
         <children>
            <VBox spacing="10" styleClass="rating-content">
               <children>
                  <Label styleClass="rating-title" text="Book Review">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="commentBookTitle_label" styleClass="book-title" />
                  <TextArea fx:id="viewComment_area" editable="false" prefHeight="100.0" prefWidth="332.0" styleClass="view-comment-area" wrapText="true" />
                  <Label styleClass="comment-subtitle" text="Add or Update Comment:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="addComment_area" prefHeight="100.0" prefWidth="332.0" promptText="Write your new comment here..." styleClass="comment-area" wrapText="true" />
                  <HBox alignment="CENTER_RIGHT" spacing="10">
                     <children>
                        <Button fx:id="cancelComment_btn" onAction="#cancelComment" styleClass="cancel-btn" text="Cancel" />
                        <Button fx:id="submitComment_btn" onAction="#submitComment" styleClass="submit-btn" text="Submit" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
