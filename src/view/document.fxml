            <FontAwesomeIcon fill="WHITE" glyphName="CLOSE" size="2em" />
         </graphic>
      </Button>
      <Button fx:id="minimize" layoutX="768.0" layoutY="2.0" mnemonicParsing="false" onAction="#minimize" prefHeight="35.0" prefWidth="60.0" styleClass="minimize" stylesheets="@designLogin.css">
