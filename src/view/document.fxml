<AnchorPane prefHeight="600.0" prefWidth="900.0" styleClass="login-form" stylesheets="@designLogin.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DocumentController">
   <children>
      <AnchorPane layoutX="68.0" layoutY="59.0" prefHeight="481.0" prefWidth="763.0" styleClass="card-form" stylesheets="@designLogin.css">
         <children>
            <FontAwesomeIcon fill="WHITE" glyphName="USERS" layoutX="337.0" layoutY="107.0" size="7em" text="ïƒ€" />
            <Label layoutX="277.0" layoutY="131.0" text="Student Login" textFill="WHITE">
               <font>
                  <Font name="Berlin Sans FB" size="36.0" />
               </font>
            </Label>
            <TextField fx:id="username" layoutX="232.0" layoutY="201.0" prefHeight="40.0" prefWidth="300.0" promptText="Username" styleClass="textfield" stylesheets="@designLogin.css">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <PasswordField fx:id="password" layoutX="232.0" layoutY="260.0" prefHeight="40.0" prefWidth="300.0" promptText="Password" styleClass="textfield" stylesheets="@designLogin.css">
               <font>
                  <Font size="16.0" />
               </font>
            </PasswordField>
            <Button fx:id="login_Btn" layoutX="307.0" layoutY="328.0" mnemonicParsing="false" onAction="#login" prefHeight="45.0" prefWidth="150.0" styleClass="login-btn" stylesheets="@designLogin.css" text="Login">
