<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="469.0" prefWidth="691.0" styleClass="login-form" stylesheets="@designLogin.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StudentRegisterController">
   <children>
      <AnchorPane layoutX="85.0" layoutY="68.0" prefHeight="400.0" prefWidth="522.0" styleClass="card-form" stylesheets="@designLogin.css">
         <children>
            <FontAwesomeIcon fill="WHITE" glyphName="USER_PLUS" layoutX="231.0" layoutY="71.0" size="5em" />
            <Label layoutX="159.0" layoutY="90.0" text="Student Register" textFill="WHITE">
               <font>
                  <Font name="Berlin Sans FB" size="30.0" />
               </font>
            </Label>
            <TextField fx:id="studentNumber" layoutX="161.0" layoutY="141.0" prefHeight="30.0" prefWidth="200.0" promptText="Student Number" styleClass="textfield" stylesheets="@designLogin.css" />
            <TextField fx:id="firstName" layoutX="161.0" layoutY="186.0" prefHeight="30.0" prefWidth="200.0" promptText="First Name" styleClass="textfield" stylesheets="@designLogin.css" />
            <TextField fx:id="lastName" layoutX="161.0" layoutY="231.0" prefHeight="30.0" prefWidth="200.0" promptText="Last Name" styleClass="textfield" stylesheets="@designLogin.css" />
            <PasswordField fx:id="password" layoutX="161.0" layoutY="276.0" prefHeight="30.0" prefWidth="200.0" promptText="Password" styleClass="textfield" stylesheets="@designLogin.css" />
            <PasswordField fx:id="confirmPassword" layoutX="161.0" layoutY="321.0" prefHeight="30.0" prefWidth="200.0" promptText="Confirm Password" styleClass="textfield" stylesheets="@designLogin.css" />
            <Button fx:id="registerBtn" layoutX="211.0" layoutY="366.0" mnemonicParsing="false" onAction="#register" prefHeight="35.0" prefWidth="100.0" styleClass="login-btn" stylesheets="@designLogin.css" text="Register" />
            <Button fx:id="loginBtn" layoutX="161.0" layoutY="411.0" mnemonicParsing="false" onAction="#switchToLogin" prefHeight="25.0" prefWidth="200.0" styleClass="switch-btn" text="Already have an account? Login" textFill="WHITE" />
         </children>
      </AnchorPane>
      <Button fx:id="close" layoutX="647.0" layoutY="14.0" mnemonicParsing="false" onAction="#exit" styleClass="close" stylesheets="@designLogin.css">
         <graphic>
            <FontAwesomeIcon glyphName="CLOSE" size="1.2em" />
         </graphic>
      </Button>
      <Button fx:id="minimize" layoutX="607.0" layoutY="14.0" mnemonicParsing="false" onAction="#minimize" styleClass="minimize" stylesheets="@designLogin.css">
         <graphic>
            <FontAwesomeIcon glyphName="MINUS" size="1.2em" />
         </graphic>
      </Button>
   </children>
</AnchorPane>
